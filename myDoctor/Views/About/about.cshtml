@model IEnumerable<myDoctor.Models.BacSi>

@{
    ViewBag.Title = "about";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-banner overlay-dark bg-image" style="background-image: url(../assets/img/bg_image_1.jpg);">
    <div class="banner-section">
        <div class="container text-center wow fadeInUp">
            <nav aria-label="Breadcrumb">
                <ol class="breadcrumb breadcrumb-dark bg-transparent justify-content-center py-0 mb-2">
                    <li class="breadcrumb-item"><a href="~/home/index">trang chỉ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thông tin</li>
                </ol>
            </nav>
            <h1 class="font-weight-normal">Về chúng tôi</h1>
        </div> <!-- .container -->
    </div> <!-- .banner-section -->
</div> <!-- .page-banner -->

<div class="page-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-4 py-3 wow zoomIn">
                <div class="card-service">
                    <div class="circle-shape bg-secondary text-white">
                        <span class="mai-chatbubbles-outline"></span>
                    </div>
                    <p><span>Tư vấn</span> từ bác sĩ</p>
                </div>
            </div>
            <div class="col-md-4 py-3 wow zoomIn">
                <div class="card-service">
                    <div class="circle-shape bg-primary text-white">
                        <span class="mai-shield-checkmark"></span>
                    </div>
                    <p><span>Thăm</span>-khám tận tâm</p>
                </div>
            </div>
            <div class="col-md-4 py-3 wow zoomIn">
                <div class="card-service">
                    <div class="circle-shape bg-accent text-white">
                        <span class="mai-basket"></span>
                    </div>
                    <p><span>Tiết </span>kiệm chi phí</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 wow fadeInUp">
                <h1 class="text-center mb-3" style="color:#263657">
                    VÌ SAO NÊN CHỌN
                    PHÒNG KHÁM ĐA KHOA PHÁP ANH
                </h1>
                <br />
                <div class="text-lg">
                    <h3 style="color:#e44d4d">   Trang thiết bị hiện đại</h3>
                    <p>

                        Phòng khám Quốc Bảo đã đầu tư cho hệ thống y tế với những thiết bị y khoa tân tiến, tương đương với các bệnh viện hàng đầu tại để hỗ trợ tối đa cho công tác chẩn đoán và điều trị.
                    </p>
                    <br />
                    <h3 style="color:#e44d4d">Dịch vụ chuyên nghiệp</h3>
                    <p>Phòng Khám Quốc Bảo luôn coi khách hàng là trọng tâm, chúng tôi luôn sẵn sàng chăm sóc bạn ân cần như chính thành viên trong gia đình</p>
                    <br />
                    <h3 style="color:#e44d4d">Đội ngũ y bác sĩ đầu ngành</h3>
                    <p>
                        Phòng khám Quốc Bảo có đội ngũ y bác sĩ đầu ngành đến từ BV Đa Khoa tỉnh Lầm Dồng, có trình độ chuyên môn cao, tay nghề giỏi, tận tâm và chuyên nghiệp
                    </p>
                    <br />
                    <h3 style="color:#e44d4d">Chi phí hợp lý</h3>
                    <p>
                        100% chi phí của chúng tôi đều công khai minh bạch và được nhập hệ thống cẩn thận.
                    </p>
                </div>
            </div>
            <div class="col-lg-10 mt-5">
                <h1 class="text-center mb-5 wow fadeInUp">Các bác sĩ</h1>
                <div class="row justify-content-center">
                    @foreach (var bs in Model)
                    {
                    <div class="col-md-6 col-lg-4 wow zoomIn">
                        <div class="card-doctor">
                            <div class="header">
                                <img src="../assets/img/doctors/doctor_1.jpg" alt="">
                                <div class="meta">
                                    <a href="#"><span class="mai-call"></span></a>
                                    <a href="#"><span class="mai-logo-whatsapp"></span></a>
                                </div>
                            </div>
                            <div class="body">
                                <p class="text-xl mb-0">@bs.tenbs</p>
                                <span class="text-sm text-grey">@bs.motabs</span>
                            </div>
                        </div>
                    </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-section banner-home bg-image" style="background-image: url(../assets/img/banner-pattern.svg);">
    <div class="container py-5 py-lg-0">
        <div class="row align-items-center">
            <div class="col-lg-4 wow zoomIn">
                <div class="img-banner d-none d-lg-block">
                    <img src="../assets/img/mobile_app.png" alt="">
                </div>
            </div>
            <div class="col-lg-8 wow fadeInRight">
                <h1 class="font-weight-normal mb-3">Dễ dàng sử dụng, dễ dàng đặt lịch</h1>
            </div>
        </div>
    </div>
</div> <!-- .banner-home -->