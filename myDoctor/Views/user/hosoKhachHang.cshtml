@model myDoctor.Models.benhAn



@{
    ViewBag.Title = "hosoKhachHang";
    Layout = "~/Views/Shared/LayoutAccount.cshtml";
}

@using (Html.BeginForm("hosoKhachHang", "user", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="modal-content" style="margin-left:80px; margin-right:80px">
        <div class="modal-header">
            <a href="~/user/hosoKhachHang"> <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button></a>

            <h4 class="modal-title" style="font-size:20px; text-align:center; font-weight:bold" id="myModal-label">Cung cấp hình ảnh về bệnh án</h4>

            <br />
            <div style="text-align:center">
                <img src="~/HinhBenhAn/@Model.urlanh" style="max-height: 600px; max-width: 600px; border: 5px solid #555" />
            </div>
            <br />
            <br />
            <br />
            <br />
            <div class="form-group">
                <label>Chọn Ảnh</label>
                <input type="file" name="fileUpload">
            </div>
            <div class="form-group">
                <label>Mô tả hồ sơ</label>
                <textarea name="mota" placeholder="@Model.mota" class="form-control" rows="3"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-success btn-block">Cập nhập</button>
    </div>

}