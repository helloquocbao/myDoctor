




<div style="width:auto; height:auto; margin-top:100px; margin-left:400px; margin-right:400px">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-sm-4"></div>
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" style="font-size:20px; text-align:center; font-weight:bold" id="myModal-label">KẾT QUẢ KHÁM</h4>

                <div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label style="font-size:15px"> Mã lịch khám: </label>
                            LK21<span class="subhead">@Model.idDatLich</span>

                        </div>
                        <div class="form-group">
                            <label style="font-size:15px">Mã kết quả: </label>
                            KQ2<span class="subhead">@Model.idKetQua</span>

                        </div>

                        <div class="form-group">
                            <label style="font-size:15px">Kết quả khám: </label>
                            @Model.ketqua
                        </div>
                        <div class="form-group">
                            <label style="font-size:15px">Bác Sĩ khám: </label>
                            @Model.tenbs
                        </div>
                        <div class="form-group">
                            <label style="font-size:15px">Chuyên khoa: </label>
                            @Model.ChuyenKhoa
                        </div>
                        <div class="form-group">
                            <label style="font-size:15px">Tiền khám: </label>
                            @Model.tienkham VNĐ
                        </div>
                        <div class="form-group">
                            <label style="font-size:15px">Hướng dẫn uống thuốc: </label>
                            @Model.hdthuoc
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>