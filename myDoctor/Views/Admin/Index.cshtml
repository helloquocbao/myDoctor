@model IEnumerable<myDoctor.Models.LichKham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<div id="page-wrapper" style="height:900px">
    <div class="container-fluid" style="">
        <div class="row">
            <div class="col-lg-12" style="text-align:center">
                <div class="col-lg-12" style="text-align:center">
                    <h1 class="page-header">Bảng điều khiển</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-comments fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewBag.khachang</div>
                                    <div>Khách hàng</div>
                                </div>
                            </div>
                        </div>
                        <a href="~/admin/taikhoanDK">
                            <div class="panel-footer">
                                <span class="pull-left">chi tiết</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-tasks fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewBag.nhanvien</div>
                                    <div>Nhân viên</div>
                                </div>
                            </div>
                        </div>
                        <a href="~/admin/bacsi">
                            <div class="panel-footer">
                                <span class="pull-left">Chi tiết</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-shopping-cart fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewBag.lichkham</div>
                                    <div>Lịch khám hôm nay</div>
                                </div>
                            </div>
                        </div>
                        <a href="~/admin/lichkham">
                            <div class="panel-footer">
                                <span class="pull-left">Chi tiết</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 style="text-align:center" class="box-title">Danh sách lịch khám của bạn</h3>

                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Ngày</th>

                                            <th>Tên Bác sĩ</th>
                                            <th>Tên người khám</th>
                                            <th>Triệu chứng</th>

                                            <th>Kết quả</th>



                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int a = 1; }
                                        @foreach (var i in Model)
                                        {
                                            <tr>
                                                <td>@a</td>
                                                <td>@i.ngaydat</td>
                                                <td>@i.BacSi.tenbs</td>
                                                <td>@i.hoten</td>
                                                <td>

                                                    <a href="@Url.Action("xemanhthongtinbenh","admin",new {id =i.idDatLich})" style="color: #B22428 "> @i.trieuchung</a>
                                                </td>

                                                @if (i.tinhTrang == true)
                                                {
                                                    <td>

                                                        <label style="color: #004C99 "> Đã khám</label>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <label style="color: #CC0000 "> chưa khám</label>
                                                    </td>
                                                }




                                            </tr>
                                            a++;
                                        }

                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <!-- /.row -->

        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        <!-- /.container-fluid -->
    </div>  
