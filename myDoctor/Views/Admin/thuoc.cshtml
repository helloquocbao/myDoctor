@model IEnumerable<myDoctor.Models.Thuoc>
@{
    ViewBag.Title = "thuoc";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Khách hàng</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Danh sách thông tin tài khoản khách hàng
                    </div>
                    <div class="panel-heading">
                       
                        <a href="~/admin/themmotthuoc"> <label style="color:#D21C34"> Thêm thuốc mới</label></a>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID Thuốc</th>
                                        <th>Tên thuốc</th>
                                        <th>Mô tả</th>
                                        <th>Tương tác</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                    <tr class="gradeU">
                                        <td>@i.idthuoc</td>
                                        <td><label style="color: #250630 ">@i.tenthuoc</label></td>
                                        <td>@i.mota</td>

                                        <td>
                                            <a href="@Url.Action("suathongtinthuoc","admin",new {id =i.idthuoc})" style="color: #ad0606 "> Sửa thông tin</a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("xoathuoc","admin",new {id =i.idthuoc})" style="color: #ad0606 "> Xóa</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
