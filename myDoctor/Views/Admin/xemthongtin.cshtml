

@{
    ViewBag.Title = "xemthongtin";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thông tin khách hàng</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->



        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Khách hàng: @Model.tenkh
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">

                                    <label>Email</label>
                                    <input class="form-control" value="@Model.email" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Họ và tên</label>
                                    <input class="form-control" readonly name="hoten" value="@Model.tenkh">
                                </div>
                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    <input class="form-control" readonly name="hoten" value="@Model.sdt">
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <br />
                                    <textarea readonly rows="3" style="width:475px">@Model.diachi</textarea>
                                </div>


                        </div>


                    </div>

                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
            <div class="col-lg-6">


                <div style=" margin-top:70px; margin-left:90px; width:300px; height:300px; background:#4cff00">

                    <img src="~/HinhBenhAn/@ViewBag.anh" />
                </div>



            </div>
        </div>
        <!-- /.panel -->

    </div>
    <!-- /.col-lg-12 -->
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <!-- /.row -->
</div>
