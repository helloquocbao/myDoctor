    
@{
    ViewBag.Title = "account";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thông tin tài khoản</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        @using myDoctor.Models
        @{
            BacSi bs = (BacSi)Session["tkBacSi"];
        }
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                     Xin chào @bs.tenbs
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <form role="form">
                                    <div class="form-group">
                                        <label>Id</label>
                                        <input class="form-control" value="@bs.idBacSi" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label>Họ và tên</label>
                                        <input class="form-control" name="hoten" placeholder="@bs.tenbs">
                                    </div>
                                    <div class="form-group">
                                        <label>Số diện thoại</label>
                                        <input class="form-control" readonly name="sdt" placeholder="@bs.sdt">

                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control" name="hoten" placeholder="@bs.email">

                                    </div>
                                    <div class="form-group">
                                        <label>Ảnh</label>
                                        <input type="file">
                                    </div>
                                    <div class="form-group">
                                        <label>Mô tả hồ sơ</label>
                                        <textarea name="mota"placeholder="@bs.motabs" class="form-control" rows="3"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>Chức vụ</label>
                                        <div class="checkbox">
                                            @if (bs.quyen == true)
                                            {
                                                <label>
                                                    <input type="checkbox" value="">Bác sĩ
                                                </label>
                                            }
                                            else
                                            {
                                                <label>
                                                    <input type="checkbox" value="">Y tá
                                                </label>
                                            }
                                        </div>
                                        <button type="submit" class="btn btn-lg btn-success btn-block">Cập nhập</button>

                                    </div>



</div>
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-6">
                             
                                <form role="form">
                                   <div style=" margin-top:70px; margin-left:90px; width:300px; height:300px; background:#4cff00"></div>
                                </form>
                              
                            
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>