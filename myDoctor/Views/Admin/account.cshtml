@model IEnumerable<myDoctor.Models.BacSi>

@{
    ViewBag.Title = "account";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thông tin tài khoản</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->


        @using (Html.BeginForm("account", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @ViewData["Loi0"]
            <div class="col-lg-12">
                @foreach (var item in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Xin chào @item.tenbs
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">
                                        <div class="form-group">

                                            <label>ID</label>
                                            <input class="form-control" value="@item.idBacSi" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label>Họ và tên</label>
                                            <input class="form-control" name="hoten" placeholder="@item.tenbs">
                                        </div>
                                        <div class="form-group">
                                            <label>Số diện thoại</label>
                                            <input class="form-control" readonly name="sdt" placeholder="@item.sdt">

                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input class="form-control" name="email" placeholder="@item.email">

                                        </div>

                                        <div class="form-group">
                                            <label>Ảnh</label>
                                            <input type="file" name="fileUpload">
                                        </div>
                                        <div class="form-group">
                                            <label>Mô tả hồ sơ</label>
                                            <textarea name="mota" placeholder="@item.motabs" class="form-control" rows="3"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Mật khẩu</label>
                                            @ViewData["Loi1"]
                                            <input class="form-control" name="password" placeholder="mật khẩu">

                                        </div>

                                        <div class="form-group">
                                            <label>Chức vụ :</label>

                                            @if (item.quyen == true)
                                            {
                                                <label>
                                                    Bác Sĩ
                                                </label>
                                                <br />
                                            }
                                            else
                                            {
                                                <label>
                                                    Y tá
                                                </label>
                                            }

                                        </div>

                                        <button type="submit" class="btn btn-lg btn-success btn-block">Cập nhập</button>


                                </div>
                                <div class="col-lg-6">


                                    <div style=" margin-top:70px; margin-left:90px; width:300px; height:300px; background:#4cff00">
                                        <img src="@Url.Content("~/hinhbacsi/" + item.urlanh)" width="300px" />
                                    </div>



                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                }
            </div>
            <!-- /.col-lg-12 -->
        }
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>