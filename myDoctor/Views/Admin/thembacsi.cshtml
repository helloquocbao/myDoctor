
@{
    ViewBag.Title = "thembacsi";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form class="row contact_form" action="/admin/thembacsi" method="post" novalidate="novalidate" style="width:auto; height:auto; margin-top:140px; margin-left:340px; margin-right:300px">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-sm-4"></div>
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModal-label">Thêm Nhân viên</h4>
                <label style="color:red"> @ViewData["Loi1"]</label>
                <div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label> Số điện thoại</label>

                            <label style="color:red"> @ViewData["Loi2"]</label>
                            <label style="color:red"> @ViewData["Loi3"]</label>
                            <input type="text" placeholder="09xxxx"  required="" class="form-control" id="sdt" name="sdt" />

                        </div>
                        <div class="form-group">
                            <label>Tên nhân viên</label>
                            <input type="text" placeholder="Nguyễn Văn A" required="" class="form-control" id="ten" name="ten" />

                        </div>
                        <div class="form-group">
                            <label>Học vị: </label>                           
                            @Html.DropDownList("hocvi", (IEnumerable<SelectListItem>)ViewBag.Hocvi, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Chức vụ:</label>
                            <br />
                            <input type="checkbox" name="chucvu" value="true">
                            <label for="vehicle1"> Bác sĩ</label><br>
                            <input type="checkbox" name="chucvu" value="false">
                            <label for="vehicle1"> Y tá</label><br>

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                        <a class="btn btn-default" href="~/admin/bacsi" role="button">Hủy</a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
