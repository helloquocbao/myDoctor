@model IEnumerable<myDoctor.Models.BacSi>
@{
    ViewBag.Title = "bacsi";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Bác sĩ</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                       Thông tin các bác sĩ
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID Bác sĩ</th>
                                        <th>Tên Bác sĩ</th>
                                        <th>Số điện thoại</th>
                                        <th>Chức vụ</th>
                                        <th>Mô tả</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                    <tr class="gradeU">
                                        <td>@i.idBacSi</td>
                                        <td>@i.tenbs</td>
                                        <td>@i.sdt</td>
                                        @if (i.quyen == true)
                                        {
                                            <td class="center">Bác sĩ</td>
}
                                        else
                                        {
                                            <td class="center">Y tá</td>
}
                                        <td class="center">@i.motabs</td>

                                        <td><a href="#">Xem</a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                      
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
      
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>