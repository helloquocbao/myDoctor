@model IEnumerable<myDoctor.Models.BacSi>
@{
    ViewBag.Title = "bacsi";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Bác sĩ</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" id="menu">
                        <ul>
                            <li style=" display: inline-block"><a href="~/admin/thembacsi">Thêm bác sĩ</a></li>

                        </ul>
                    </div>
                    <style>
                        #menu ul {
                            background: #1F568B;
                            list-style-type: none;
                            text-align: center;
                        }

                        #menu li {
                            color: #f1f1f1;
                            display: inline-block;
                            width: 120px;
                            height: 40px;
                            line-height: 40px;
                            margin-left: -5px;
                        }

                        #menu ul {
                            background: #1F568B;
                            list-style-type: none;
                            overflow: hidden;
                            width: 100%;
                        }

                        #menu a {
                            text-decoration: none;
                            color: #fff;
                            display: block;
                        }

                            #menu a:hover {
                                background: #F1F1F1;
                                color: #333;
                            }
                    </style>
                    <!-- /.panel-heading -->
                    @ViewData["Loi0"]
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID Bác sĩ</th>
                                        <th>Tên Bác sĩ</th>
                                        <th>Số điện thoại</th>
                                        <th>Chức vụ</th>
                                        <th>Học vị</th>
                                        <th>Chi tiết</th>
                                        <th>Reset mật khẩu</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                    <tr class="gradeU">
                                        <td>@i.idBacSi</td>
                                        <td>@i.tenbs</td>
                                        <td>@i.sdt</td>
                                        @if (i.quyen == true)
                                        {
                                            <td class="center">Bác sĩ</td>
                                        }
                                        else
                                        {
                                            <td class="center">Y tá</td>
                                        }
                                        <td class="center">@i.HocVi.HocVi1</td>

                                        <td><a style="color: #154713; font-weight:normal" href="@Url.Action("chitietbs","admin",new {id =i.idBacSi})">Xem</a></td>
                                        <td><a href="@Url.Action("Resetmatkhau","admin",new {id =i.idBacSi})">Thay đổi</a></td>
                                        <td><a style="color:red;" href="@Url.Action("xoabacsi","admin",new {id =i.idBacSi})">Xóa tài khoản</a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
      
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>