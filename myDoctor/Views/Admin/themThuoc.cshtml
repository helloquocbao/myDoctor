@model IEnumerable<myDoctor.Models.KetQuaKham>
@{
    ViewBag.Title = "themThuoc";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form class="row contact_form" action="/admin/themthuoc" method="post" novalidate="novalidate" style="width:auto; height:auto; margin-top:140px; margin-left:340px; margin-right:300px">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-sm-4"></div>
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModal-label">Lên đơn thuốc</h4>
                <label style="color:red"> @ViewData["Loi1"]</label>
                <div>
                  
                    <div class="modal-body">
                        <div class="form-group">
                            <label>ID kết quả:</label>
                            <label><span>KQP</span>@ViewBag.idketqua</label>
                            <input type="number" required="" hidden readonly value="@ViewBag.idketqua" name="id" />
                            @* thuoc 1 *@
                            <div class="form-group">
                                <label>Tên thuốc số 1:</label>
                                @Html.DropDownList("thuoc0", (IEnumerable<SelectListItem>)ViewBag.thuoc, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label> Số lượng</label>

                                <label style="color:red"> @ViewData["Loi2"]</label>

                                <input type="number" required="" min="0" class="form-control" id="soluong0" name="soluong0" />

                            </div>
                            @* thuoc 2 *@
                            <div class="form-group">
                                <label>Tên thuốc số 2:</label>
                                @Html.DropDownList("thuoc1", (IEnumerable<SelectListItem>)ViewBag.thuoc, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label> Số lượng</label>

                                <label style="color:red"> @ViewData["Loi2"]</label>

                                <input type="number" required="" min="0" class="form-control" id="soluong1" name="soluong1" />

                            </div>
                            @* thuoc 3 *@
                            <div class="form-group">
                                <label>Tên thuốc số 3:</label>
                                @Html.DropDownList("thuoc2", (IEnumerable<SelectListItem>)ViewBag.thuoc, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label> Số lượng</label>

                                <label style="color:red"> @ViewData["Loi2"]</label>

                                <input type="number" required="" min="0" class="form-control" id="soluong2" name="soluong2" />

                            </div>
                            @* thuoc 4 *@
                            <div class="form-group">
                                <label>Tên thuốc số 4:</label>
                                @Html.DropDownList("thuoc3", (IEnumerable<SelectListItem>)ViewBag.thuoc, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label> Số lượng</label>

                                <label style="color:red"> @ViewData["Loi2"]</label>

                                <input type="number" required="" min="0" class="form-control" id="soluong3" name="soluong3" />

                            </div>
                            @* thuoc 5 *@
                            <div class="form-group">
                                <label>Tên thuốc số 5:</label>
                                @Html.DropDownList("thuoc4", (IEnumerable<SelectListItem>)ViewBag.thuoc, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label> Số lượng</label>

                                <label style="color:red"> @ViewData["Loi2"]</label>

                                <input type="number" required="" min="0" class="form-control" id="soluong4" name="soluong4" />

                            </div>
                            @* thuoc 6 *@
                            <div class="form-group">
                                <label>Tên thuốc số 6:</label>
                                @Html.DropDownList("thuoc5", (IEnumerable<SelectListItem>)ViewBag.thuoc, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label> Số lượng</label>

                                <label style="color:red"> @ViewData["Loi2"]</label>

                                <input type="number" min="0" required="" class="form-control" id="soluong5" name="soluong5" />

                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Thêm</button>
                            <a class="btn btn-default" href="~/admin/lichkham" role="button">Hủy</a>

                        </div>
                    </div>
            </div>
        </div>
    </div>
</form>

