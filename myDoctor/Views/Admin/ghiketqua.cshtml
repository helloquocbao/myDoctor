
@{
    ViewBag.Title = "ghiketqua";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form class="row contact_form" action="/admin/ghiketqua" method="post" novalidate="novalidate" style="width:auto; height:auto; margin-top:80px; margin-left:380px; margin-right:300px">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-sm-4"></div>
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModal-label">Ghi kết quả</h4>
                @ViewData["Loi0"]
                <div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label> ID lịch khám</label>
                            <input type="text" class="form-control" readonly value="@Model.idDatLich" name="idlichkham" />
                        </div>
                        <div class="form-group">
                            <label> Kết quả khám</label>
                            <textarea name="ketqua" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Hướng dẫn uống thuốc</label>
                            <textarea name="hdthuoc" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Chi phí khám</label>
                            <input type="number" class="form-control" name="chiphi" />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnOK" onclick="">Thêm</button>
                        <button class="btn btn-default" onclick="location.href='@Url.Action("lichkham", "admin")';return false;">Hủy</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
